
@{
    ViewData["Title"] = "Добавление мероприятия";
}
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </head>
<h1 class="text-shadow-1">Добавить мероприятие</h1>
<h1 class="text">Основное:</h1>
    <table class="table">
        <tr class="table-danger">
            <th>Позиция</th>
            <th>Заполнить</th>
        </tr>
        <tr class="table-warning">
            <td>Имя</td>
            <td><input id="name" class="form-control" placeholder="Название мероприятия"/></td>
        </tr>
        <tr class="table-warning">
            <td>Адрес изображения</td>
            <td><input id="imgsrc" class="form-control"/></td>
        </tr>
        <tr class="table-warning">
            <td>Информация</td>
            <td><input id="info"class="form-control" placeholder="Краткая информация"/></td>
        </tr>
    </table>
<h1 class="text">Расписание:</h1>
<table class="table">
    <tr class="table-danger">
        <th>Позиция</th>
        <th>Заполнить</th>
    </tr>
    <tr class="table-warning">
        <td>Дата</td>
        <td><input id="day" class="form-control" placeholder="12.12.12"/></td>
    </tr>
    <tr class="table-warning">
        <td>Время</td>
        <td><input id="time" class="form-control" placeholder="12:12"/></td>
    </tr>
</table>


<button onclick="Save()" style="margin-top:30px;" class="btn btn-success">&#128449;Сохранить</button>
<script src="~/css/site.css"></script>
<script>
    function Save() {
        var eventName = document.getElementById("name").value;
        var eventImgSrc = document.getElementById("imgsrc").value;
        var eventInfo = document.getElementById("info").value;
        var eventDay = document.getElementById("day").value;
        var eventTime = document.getElementById("time").value;
        var data = {
            Name: eventName,
            ImgSrc: eventImgSrc,
            Info: eventInfo,
            Day: eventDay,
            Time: eventTime
        };
        console.log(data);

        $.ajax({
            type: "POST",
            url: "/Home/AddEventApi",
            // The key needs to match your method's input parameter (case-sensitive).
            data: data,
            //contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function () { alert("Мероприятие добавлено"); window.location.assign("/Home/Admin")},
            failure: function() {
                alert("Не удалось добавить мероприятие");
            }
        });

        function SuccessAlert() {
            document.body.innerHTML = '<div class="alert alert-success"><strong>Success!</strong> Indicates a successful or positive action.</div>';
        }
    }
</script>
